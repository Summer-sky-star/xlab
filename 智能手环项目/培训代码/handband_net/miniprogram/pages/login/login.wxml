
<view class="Title"> 
  <view> 欢迎登录手环小程序 </view>
</view>

  <view class="label-list">
        <view class="label"></view>
  </view>

  <view class="label-list">
        <view class="label">账号：</view>
        <input maxlength="16" bindinput="userNameInput" placeholder="请输入您的账号"  placeholder-class="place" name="userName"/>
  </view>

  <view class="label-list">
        <view class="label">密码：</view>
        <input bindinput="passWordInput" password='{{isPassword}}' placeholder="请输入您的密码" maxlength="16" placeholder-class="place" name="passWord"/>
        <switch class="switch_size" style="zoom: 0.7;" bindchange="switchChange" >显示输入的密码</switch>
  </view>

  <view class="label-list">
        <view class="label"></view>
  </view>

  <view>
    <button class="btn" type="primary" bindtap="loginacess"> 登录 </button> 
    <button class="login" type="primary" bindtap="register"> 注册 </button>
  </view>
